{
    "name": "jobs-service",
    "version": "1.0.0",
    "description": "Jobs microservice for handling background jobs (expiration, email, notification, indexing) using BullMQ",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "test:coverage": "jest --coverage",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "keywords": [
        "jobs-service",
        "microservice",
        "bullmq",
        "typescript",
        "background-jobs"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@vestify/shared": "^1.0.16",
        "amqplib": "^0.10.3",
        "bullmq": "^5.22.0",
        "dotenv": "^16.3.1",
        "ioredis": "^5.3.2"
    },
    "devDependencies": {
        "@types/amqplib": "^0.10.8",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.5",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^9.39.1",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    }
}