{
    "name": "api-gateway",
    "version": "1.0.0",
    "description": "API Gateway service for Vestify e-commerce platform",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "test:coverage": "jest --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "keywords": [
        "api-gateway",
        "microservice",
        "express",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@vestify/shared": "^1.0.21",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "http-proxy-middleware": "^2.0.6",
        "ioredis": "^5.8.2",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/ioredis": "^5.0.0",
        "@types/jest": "^29.5.11",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.10.5",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "globals": "^16.5.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.50.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    }
}